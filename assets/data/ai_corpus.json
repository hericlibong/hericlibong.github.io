[
  {%- for post in site.posts -%}
    {
      "id": "post-{{ post.title | slugify }}",
      "title": "{{ post.title | strip_html | escape }}",
      "content": "{{ post.content | strip_html | escape | remove: '"' }}",
      "type": "article",
      "tags": [
        {%- for tag in post.tags -%}
          "{{ tag | escape }}"{% unless forloop.last %},{% endunless %}
        {%- endfor -%}
      ],
      "author": "{{ post.author | default: site.author | escape }}",
      "date": "{{ post.date | date: '%Y-%m-%d' }}",
      "url": "{{ post.url | absolute_url | escape }}"
    }{% unless forloop.last %},{% endunless %}
  {%- endfor -%}
  {%- if site.projects.size > 0 -%},
  {%- endif -%}
  {%- for project in site.projects -%}
    {
      "id": "project-{{ project.title | slugify }}",
      "title": "{{ project.title | strip_html | escape }}",
      "content": "{{ project.content | strip_html | escape | remove: '"' }}",
      "type": "project",
      "tags": [
        {%- for tag in project.tags -%}
          "{{ tag | escape }}"{% unless forloop.last %},{% endunless %}
        {%- endfor -%}
      ],
      "author": "{{ project.author | default: site.author | escape }}",
      "date": "{{ project.date | date: '%Y-%m-%d' }}",
      "url": "{{ project.url | absolute_url | escape }}"
    }{% unless forloop.last %},{% endunless %}
  {%- endfor -%}
  {%- if site.pages.size > 0 -%},
  {%- endif -%}
  {%- for page in site.pages -%}
    {%- if page.title and page.title != '404' and page.title != 'Home' -%}
    {
      "id": "page-{{ page.title | slugify }}",
      "title": "{{ page.title | strip_html | escape }}",
      "content": "{{ page.content | strip_html | escape | remove: '"' }}",
      "type": "page",
      "tags": [],
      "author": "{{ site.author | escape }}",
      "date": "",
      "url": "{{ page.url | absolute_url | escape }}"
    }{% unless forloop.last %},{% endunless %}
    {%- endif -%}
  {%- endfor -%}
]